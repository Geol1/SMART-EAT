<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="430dp"
        app:cardCornerRadius="@dimen/dimens_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/replay"
            android:layout_width="@dimen/dimens_120dp"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:layout_height="@dimen/dimens_120dp"
            android:layout_marginHorizontal="@dimen/dimens_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_icon_check_alt2" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:text="@string/your_order_is_successfully"
            android:textColor="@color/Title_color"
            android:paddingHorizontal="@dimen/dimens_10dp"
            android:textSize="@dimen/dimens_24sp"
            android:fontFamily="@font/avenirltstd_black"
            app:layout_constraintTop_toBottomOf="@id/replay"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/dimens_35dp"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:text="@string/you_can_track_the_delivery_in_the_order_section"
            android:textColor="@color/Title_color"
            android:fontFamily="@font/avenirltstd_book"
            app:layout_constraintTop_toBottomOf="@id/text1"
            android:textSize="@dimen/dimens_17sp"/>


            <Button
                android:id="@+id/order_dialog_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:hint="@string/continue_shopping"
                android:textSize="@dimen/dimens_17sp"
                android:layout_marginHorizontal="@dimen/dimens_30dp"
                app:layout_constraintTop_toBottomOf="@id/text2"
                android:background="@drawable/rounded_shape_butom"
                android:fontFamily="@font/avenir_heavy_opentype_bigfontsite"
                android:textColorHint="@color/white"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:text="@string/go_to_orders"
            android:textColor="@color/Title_color"
            android:fontFamily="@font/avenirltstd_book"
            app:layout_constraintTop_toBottomOf="@id/order_dialog_button"
            android:textSize="@dimen/dimens_17sp"
            android:paddingBottom="@dimen/dimens_16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>