<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimens_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/replay"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_icon_check_alt2" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:text="@string/your_order_is_successfully"
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/dimens_10dp"
            android:textSize="@dimen/dimens_30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:text="You can track the delivery in the Order section. "
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_15sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange_clear"
            app:cardCornerRadius="@dimen/dimens_30dp"
            android:layout_margin="@dimen/dimens_30dp"
            android:paddingHorizontal="@dimen/dimens_15dp"
            android:background="@drawable/rounded_shape_into_log">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginVertical="@dimen/dimens_10dp"
                android:text="@string/continue_shopping"
                android:textSize="@dimen/dimens_20sp"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>