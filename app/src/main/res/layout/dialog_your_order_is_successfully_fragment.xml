<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dialog.DialogYourOrderIsSucceful">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimens_20dp"
        android:layout_marginHorizontal="@dimen/dimens_30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/replay"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_icon_check_alt2" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:text="@string/your_order_is_successfully"
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_ltstd_black"
            android:paddingHorizontal="@dimen/dimens_10dp"
            android:textSize="@dimen/dimens_30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/replay" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/avenir_ltstd_book"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:text="@string/you_can_track_the_delivery_in_the_orders_section"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1" />
         <TextView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingVertical="@dimen/dimens_10dp"
                android:fontFamily="@font/avenir_ltstd_heavy"
                android:background="@drawable/rounded_shape_cardview_20dp"
                android:text="@string/enable_location"
                android:textSize="@dimen/dimens_20sp"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dimens_30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/avenir_ltstd_book"
            android:layout_margin="@dimen/dimens_15dp"
            android:text="@string/go_to_orders"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_15sp"
            app:layout_constraintTop_toBottomOf="@+id/card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>