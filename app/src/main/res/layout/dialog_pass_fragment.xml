<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        app:cardCornerRadius="@dimen/dimens_20dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/replay"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimens_30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimens_20dp"
                android:src="@drawable/ic_lock_overturning"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_password_has_been_reset"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:fontFamily="@font/avenir_ltstd_black"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/dimens_10dp"
            android:textSize="@dimen/dimens_30sp"
            app:layout_constraintTop_toBottomOf="@+id/replay"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/avenir_ltstd_book"
            android:layout_marginHorizontal="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:text="@string/you_ll_shortly_receive_an_email_with_a_code_to_setup_an_new_password"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_15sp"
            app:layout_constraintTop_toBottomOf="@+id/text1"/>
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange_clear"
            app:cardCornerRadius="@dimen/dimens_30dp"
            android:layout_margin="@dimen/dimens_30dp"
            android:paddingHorizontal="@dimen/dimens_15dp"
            android:background="@drawable/rounded_shape_into_log">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/avenir_ltstd_heavy"
                android:layout_marginVertical="@dimen/dimens_10dp"
                android:text="Done"
                android:textSize="@dimen/dimens_20sp"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>