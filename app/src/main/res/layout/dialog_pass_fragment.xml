<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="290dp"
        android:layout_height="463dp"
        app:cardCornerRadius="@dimen/dimens_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/replay"
                android:layout_width="@dimen/dimens_300dp"
                android:layout_marginTop="@dimen/dimens_30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_overturning"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_password_has_been_reset"
            android:textColor="@color/Title_color"
            android:layout_marginTop="@dimen/dimens_24sp"
            android:fontFamily="@font/avenirltstd_black"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/dimens_10dp"
            android:textSize="@dimen/dimens_24sp"
            app:layout_constraintTop_toBottomOf="@+id/replay"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/dimens_17sp"
            android:text="@string/you_ll_shortly_receive_an_email_with_a_code_to_setup_an_new_password"
            android:textColor="@color/Title_color"
            android:fontFamily="@font/avenirltstd_book"
            android:textSize="@dimen/dimens_15sp"
            app:layout_constraintTop_toBottomOf="@+id/text1"/>
        <Button
            android:id="@+id/order_dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:hint="@string/done"
            android:textSize="@dimen/dimens_17sp"
            android:layout_marginHorizontal="@dimen/dimens_30dp"
            app:layout_constraintTop_toBottomOf="@id/text1"
            android:background="@drawable/rounded_shape_butom"
            android:fontFamily="@font/avenir_heavy_opentype_bigfontsite"
            android:textColorHint="@color/white"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>