<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context=".ui.authentication.AuthenticationActivity">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="#707070"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.45"
        >

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_shape_authencation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintHeight_default="percent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/welcome_back"
            android:textAlignment="center"
            android:textColor="@color/title_color"
            android:id="@+id/titleAuthentication"
            android:textSize="@dimen/dimens_34sp"
            android:layout_marginTop="@dimen/dimens_8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="@string/log_in_to_your_account"
            android:textAlignment="center"
            android:textColor="@color/text_sub_title"
            android:id="@+id/subTitleAuthentication"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens_8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleAuthentication"
            android:layout_height="wrap_content"/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/subTitleAuthentication"
            android:layout_marginTop="30dp"
            android:textSize="17sp"
            android:paddingVertical="@dimen/dimens_10dp"
            android:padding="5dp"
            android:paddingHorizontal="8dp"
            android:hint="Email"
            android:textColorHint="#707070"
            android:id="@+id/username"
            android:background="@drawable/rounded_shape_input_text"
       android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40dp"
            />

        <EditText
            app:layout_constraintTop_toBottomOf="@id/username"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:textSize="@dimen/dimens_17sp"
            android:paddingHorizontal="@dimen/dimens_10dp"
            android:paddingVertical="@dimen/dimens_10dp"
            android:padding="@dimen/dimens_5dp"
            android:id="@+id/username_pass"
            android:hint="password"
            android:background="@drawable/rounded_shape_input_text"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40dp"
            />

        <TextView

            app:layout_constraintTop_toBottomOf="@id/username_pass"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:textSize="@dimen/dimens_25sp"
            android:paddingHorizontal="4dp"
            android:padding="@dimen/dimens_5dp"
            android:id="@+id/button_login"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_700"
            android:hint="password"
            android:text="Login"
            android:textAlignment="center"
            android:background="@drawable/rounded_shape_input_text"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Forgot your password"
            android:textColor="#000000"
            android:id="@+id/forgot_password"
            android:layout_marginTop="@dimen/dimens_30dp"
            app:layout_constraintTop_toBottomOf="@+id/button_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_30dp"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Don't have an account?"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Sinup"
                android:textSize="@dimen/dimens_20sp"
                android:layout_marginHorizontal="4dp"
                android:textColor="@color/purple_700"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>