<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/image"
        android:layout_width="@dimen/dimens_150dp"
        android:layout_height="@dimen/dimens_200dp"
        android:layout_margin="@dimen/dimens_8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gris_clear" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_130dp"
            android:text="Asia"
            android:textAlignment="center"
            android:fontFamily="@font/avenir_ltstd_heavy"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_17sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:fontFamily="@font/avenir_ltstd_book"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_160dp"
            android:text="1126 places"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_17sp" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>