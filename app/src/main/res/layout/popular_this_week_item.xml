<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:background="#B8BBC6"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:id="@+id/droite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:id="@+id/title"
            android:text="Kellys cafe and expresso"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:id="@+id/location"
            app:layout_constraintStart_toStartOf="@+id/title"
            android:text="882 swift courts apt 912"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/location"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/start"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_baseline_star_border_24"
                android:layout_height="wrap_content"
                app:tint="@color/purple_700" />
            <TextView
                android:layout_width="wrap_content"
                android:text="4.8"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/mark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/start"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="(233 ratings)"
                android:textSize="16sp"
                android:id="@+id/votes"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mark"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/purple_700"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintStart_toEndOf="@+id/votes"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="free delivery"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>