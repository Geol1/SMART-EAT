<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimens_15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="@dimen/dimens_8dp"
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="match_parent"
            android:background="#B8BBC6"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimens_8dp"
        android:id="@+id/title"
        android:textSize="@dimen/dimens_17sp"
        android:fontFamily="@font/avenir_ltstd_heavy"
        app:layout_constraintStart_toStartOf="@+id/image"
        android:text="@string/andy_and_cindi_s_diner"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/dimens_13sp"
        android:id="@+id/location"
        app:layout_constraintStart_toStartOf="@+id/title"
        android:text="87 Botsford Cicle Apt"
        android:fontFamily="@font/avenir_ltstd_roman"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/location"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dimens_20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/start"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_star_border_24"
            android:layout_height="@dimen/dimens_20dp"
            app:tint="@color/purple_700" />
        <TextView
            android:layout_width="wrap_content"
            android:text="4.8"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_13sp"
            android:id="@+id/mark"
            android:fontFamily="@font/avenir_ltstd_book"
            android:layout_marginStart="@dimen/dimens_5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/start"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="(233 ratings)"
            android:textSize="@dimen/dimens_13sp"
            android:id="@+id/votes"
            android:layout_marginHorizontal="@dimen/dimens_4dp"
            android:fontFamily="@font/avenir_ltstd_roman"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mark"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimens_8dp"
                android:background="@drawable/rounded_shape_cardview_20dp"
                android:fontFamily="@font/avenir_ltstd_roman"
                android:paddingHorizontal="@dimen/dimens_10dp"
                android:text="free delivery"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/votes"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>