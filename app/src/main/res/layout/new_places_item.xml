<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimens_200dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="@dimen/dimens_8dp"
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="@dimen/dimens_250dp">
        <ImageView
            android:layout_width="match_parent"
            android:background="#B8BBC6"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimens_8dp"
        android:textSize="@dimen/dimens_25sp"
        android:id="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/image"
        android:text="@string/andy_and_cindi_s_diner"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimens_8dp"
        android:textSize="@dimen/dimens_20sp"
        android:id="@+id/location"
        app:layout_constraintStart_toStartOf="@+id/title"
        android:text="Andy and Cindi's diner"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/location"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/start"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_star_border_24"
            android:layout_height="wrap_content"
            app:tint="@color/purple_700" />
        <TextView
            android:layout_width="wrap_content"
            android:text="4.8"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_16sp"
            android:id="@+id/mark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/start"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="(233 ratings)"
            android:textSize="@dimen/dimens_16sp"
            android:id="@+id/votes"
            android:layout_marginHorizontal="@dimen/dimens_4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mark"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/purple_700"
            android:layout_marginHorizontal="@dimen/dimens_8dp"
            app:layout_constraintStart_toEndOf="@+id/votes"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="free delivery"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>