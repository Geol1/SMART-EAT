<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.verifyyourphone.VerifyYourPhoneActivity"
    android:background="@drawable/rounded_shape_authentification">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify your\nphone"
        android:gravity="center"
        android:textSize="@dimen/dimens_40sp"
        android:textColor="@color/Title_color"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimens_30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/phoneverifiction_title"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We have sent you an SMS with a code to \n number +84 905070017"
        app:layout_constraintTop_toBottomOf="@id/phoneverifiction_title"
        android:layout_marginTop="@dimen/dimens_30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:id="@+id/phoneverifiction_consign"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_30dp"
        app:layout_constraintTop_toBottomOf="@id/phoneverifiction_consign"
        android:id="@+id/phoneverifiction_numero1"
        android:layout_marginHorizontal="@dimen/dimens_16sp"
        android:paddingTop="@dimen/dimens_5dp"
        android:paddingBottom="@dimen/dimens_5dp"
        android:paddingEnd="@dimen/dimens_10dp"
        android:background="@drawable/rounded_shape_input_text"
        >
        <com.hbb20.CountryCodePicker
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dimens_16dp"
            app:ccp_defaultNameCode="CM"
            app:ccp_showPhoneCode="true"
            android:id="@+id/calendar_icon"
            app:tint="#229bb4"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phoneverifiction_consign"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:textSize="@dimen/dimens_15sp"
            android:layout_marginEnd="@dimen/dimens_10dp"
            android:layout_gravity="center"
            android:id="@+id/phoneverifiction_numero"
            />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/phoneverifiction_numero1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimens_40sp"
        android:layout_height="wrap_content"
        android:id="@+id/phoneverifiction_end0">
        <TextView
            android:id="@+id/phoneverifiction_end1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or_login_with"
            android:fontFamily="sans-serif"
            android:textAlignment="textStart"
            android:textColor="#707070"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/phoneverifiction_numero" />
        <TextView
            android:id="@+id/phoneverifiction_end2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Social_network"
            android:textAlignment="textStart"
            android:fontFamily="sans-serif"
            android:textColor="@color/purple_700"
            android:layout_marginHorizontal="4dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/phoneverifiction_numero" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneverifiction_end0"
        android:layout_marginTop="@dimen/dimens_40sp"
        android:layout_marginHorizontal="@dimen/dimens_16dp"
        android:background="@drawable/rounded_shape_butom"
        android:hint="@string/next"
        android:textColorHint="@color/white"
        android:textSize="@dimen/dimens_20sp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/phoneverifiction_button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>