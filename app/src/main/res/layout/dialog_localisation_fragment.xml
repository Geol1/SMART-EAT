<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/location_on"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimens_30dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        android:src="@drawable/ic_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Your Location"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimens_30dp"
        android:textAlignment="center"
        android:textSize="@dimen/dimens_34sp"
        app:layout_constraintTop_toBottomOf="@+id/replay"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dimens_30dp"
        android:text="@string/please_allow_to_use_your_location_to_show_nearby_restaurant_on_the_map"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_20sp"
        app:layout_constraintTop_toBottomOf="@+id/text1"/>
    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Location"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/dimens_30dp"
        android:paddingHorizontal="@dimen/dimens_30dp"
        android:layout_marginHorizontal="@dimen/dimens_30dp"
        android:background="@drawable/rounded_shape_into_log"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>