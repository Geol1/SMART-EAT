<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dimens_60dp"
    android:layout_marginEnd="@dimen/dimens_10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable ="false"
        app:behavior_peekHeight="@dimen/dimens_30dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dimens_70dp"
            android:layout_height="@dimen/dimens_5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:backgroundTint="@color/gris_clear"
            android:id="@+id/card_id"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimens_20sp"
            android:id="@+id/idMenuBar"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_roman"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/idFilterMenu"
                android:textColor="@color/text_color"
                android:id="@+id/idReset"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filters"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_roman"
                app:layout_constraintStart_toEndOf="@id/idReset"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/idDone"
                android:textColor="@color/text_color"
                android:id="@+id/idFilterMenu"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_roman"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/idFilterMenu"
                android:textColor="@color/purple_700"
                android:id="@+id/idDone"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idMenuBar"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="@dimen/dimens_10dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="90dp" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/filter_bottomsheet"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUISINES"
            android:textSize="@dimen/dimens_15sp"
            android:textColor="@color/gris_clear"
            android:fontFamily="@font/avenir_heavy_opentype_bigfontsite"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimens_20sp"
            android:layout_marginTop="@dimen/dimens_20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/idCuisineText"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/idCuisineText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimens_20sp"
            android:layout_marginStart="@dimen/dimens_20sp"
            android:layout_marginEnd="@dimen/dimens_10dp"
            android:id="@+id/idCuisine">

            <TextView
                android:id="@+id/idAmerica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="America"
                android:textSize="@dimen/dimens_15sp"
                android:fontFamily="@font/avenirltstd_roman"
                android:textColor="@color/gris_clear"
                android:paddingVertical="@dimen/dimens_5dp"
                android:paddingHorizontal="@dimen/dimens_15dp"
                android:background="@drawable/shape_cuisine_names_filters"
                app:layout_constraintEnd_toStartOf="@id/idAsia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asia"
                    android:textSize="@dimen/dimens_15sp"
                    android:fontFamily="@font/avenirltstd_roman"
                    android:textColor="@color/gris_clear"
                    android:paddingVertical="@dimen/dimens_5dp"
                    android:paddingHorizontal="@dimen/dimens_15dp"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    app:layout_constraintEnd_toStartOf="@id/idShushi"
                    app:layout_constraintStart_toEndOf="@id/idAmerica"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/shape_cuisine_names_filters"
                    android:id="@+id/idAsia"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shushi"
                    android:textSize="@dimen/dimens_15sp"
                    android:fontFamily="@font/avenirltstd_roman"
                    android:textColor="@color/gris_clear"
                    android:paddingVertical="@dimen/dimens_5dp"
                    android:paddingHorizontal="@dimen/dimens_15dp"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    app:layout_constraintEnd_toStartOf="@id/idPizza"
                    app:layout_constraintStart_toEndOf="@id/idAsia"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/shape_cuisine_names_filters"
                    android:id="@+id/idShushi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pizza"
                    android:textSize="@dimen/dimens_15sp"
                    android:fontFamily="@font/avenirltstd_roman"
                    android:textColor="@color/gris_clear"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:paddingVertical="@dimen/dimens_5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingHorizontal="@dimen/dimens_15dp"
                    app:layout_constraintStart_toEndOf="@id/idShushi"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/shape_cuisine_names_filters"
                    android:id="@+id/idPizza"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dessert"
                    android:textSize="@dimen/dimens_15sp"
                    android:fontFamily="@font/avenirltstd_roman"
                    android:textColor="@color/gris_clear"
                    android:paddingVertical="@dimen/dimens_5dp"
                    android:paddingHorizontal="@dimen/dimens_15dp"
                    android:background="@drawable/shape_cuisine_names_filters"
                    android:layout_marginTop="@dimen/dimens_10sp"
                    app:layout_constraintEnd_toStartOf="@id/idFast_Food"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/idAmerica"
                    android:id="@+id/idDessert"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fast_food"
                    android:textSize="@dimen/dimens_15sp"
                    android:fontFamily="@font/avenirltstd_roman"
                    android:textColor="@color/gris_clear"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:paddingVertical="@dimen/dimens_5dp"
                    android:paddingHorizontal="@dimen/dimens_15dp"
                    android:background="@drawable/shape_cuisine_names_filters"
                    app:layout_constraintEnd_toStartOf="@id/idVietnamese"
                    app:layout_constraintStart_toEndOf="@id/idDessert"
                    app:layout_constraintTop_toBottomOf="@id/idAmerica"
                    android:layout_marginTop="@dimen/dimens_10sp"
                    android:id="@+id/idFast_Food"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vietnamese"
                    android:textSize="@dimen/dimens_15sp"
                    android:fontFamily="@font/avenirltstd_roman"
                    android:textColor="@color/gris_clear"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:paddingVertical="@dimen/dimens_5dp"
                    android:paddingHorizontal="@dimen/dimens_15dp"
                    android:background="@drawable/shape_cuisine_names_filters"
                    app:layout_constraintStart_toEndOf="@id/idFast_Food"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/dimens_10sp"
                    android:id="@+id/idVietnamese"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/idCuisine"
            android:text="@string/sort_by"
            android:textSize="@dimen/dimens_15sp"
            android:layout_marginTop="@dimen/dimens_15sp"
            android:fontFamily="@font/avenir_heavy_opentype_bigfontsite"
            android:textColor="@color/gris_clear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dimens_20sp"
            android:id="@+id/idSortBy"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/idSortBy"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingEnd="@dimen/dimens_10sp"
            android:layout_marginStart="@dimen/dimens_20sp"
            android:id="@+id/SortByItems">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimens_20sp"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/top_rated"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_book"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/purple_700"
                android:id="@+id/idNearest"
                />
            <ImageView
                android:layout_width="@dimen/dimens_25dp"
                android:layout_height="@dimen/dimens_25dp"
                android:src="@mipmap/checked_foreground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idMenuBar"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="@dimen/dimens_5dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nearest_me"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_book"
                android:layout_marginTop="@dimen/dimens_20sp"
                android:textColor="@color/text_color"
                android:id="@+id/idTopRead"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idMenuBar"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cost_high_to_low"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_book"
                android:layout_marginTop="@dimen/dimens_20sp"
                android:textColor="@color/text_color"
                android:id="@+id/idCoastHigh"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idMenuBar"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="90dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cost Low to High"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_book"
                android:layout_marginTop="@dimen/dimens_20sp"
                android:textColor="@color/text_color"
                android:id="@+id/idCoastLow"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idMenuBar"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/most_popular"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_book"
                android:layout_marginTop="@dimen/dimens_20sp"
                android:textColor="@color/text_color"
                android:id="@+id/idMostPopular"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idMenuBar"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="90dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:textSize="@dimen/dimens_15sp"
            android:fontFamily="@font/avenir_heavy_opentype_bigfontsite"
            android:textColor="@color/gris_clear"
            app:layout_constraintTop_toBottomOf="@id/divider5"
            android:layout_marginTop="@dimen/dimens_20sp"
            android:id="@+id/idFilterBody"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimens_20sp"
                android:id="@+id/idFilterBodyItems"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/open_now"
                    android:textSize="@dimen/dimens_17sp"
                    android:fontFamily="@font/avenirltstd_book"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/purple_700"
                    android:id="@+id/idOpenNow"
                    />
                <ImageView
                    android:layout_width="@dimen/dimens_25dp"
                    android:layout_height="@dimen/dimens_25dp"
                    android:src="@mipmap/checked_foreground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idMenuBar"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="90dp" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimens_10sp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_cards"
                    android:textSize="@dimen/dimens_17sp"
                    android:fontFamily="@font/avenirltstd_book"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/purple_700"
                    android:id="@+id/idCreditCards"
                    />
                <ImageView
                    android:layout_width="@dimen/dimens_25dp"
                    android:layout_height="@dimen/dimens_25dp"
                    android:src="@mipmap/checked_foreground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idMenuBar"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="90dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alcohol_served"
                android:textSize="@dimen/dimens_17sp"
                android:fontFamily="@font/avenirltstd_book"
                android:layout_marginTop="@dimen/dimens_20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/text_color"
                android:id="@+id/idAlcoholServed"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idMenuBar"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:background="@color/gris_clear"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="90dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:paddingTop="@dimen/dimens_20sp"
                android:textSize="@dimen/dimens_18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/idPrice"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00"
                    android:paddingTop="@dimen/dimens_20sp"
                    android:textSize="@dimen/dimens_18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/idPriceValueStart"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_200_00"
                    android:layout_marginStart="@dimen/dimens_90dp"
                    android:paddingTop="@dimen/dimens_20sp"
                    android:textSize="@dimen/dimens_18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/idPriceValuEnd"
                    />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekbar"
                style="?android:attr/seekBarStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_16dp"
                android:layout_marginTop="@dimen/dimens_10sp"
                android:layout_marginBottom="@dimen/dimens_10dp"
                android:indeterminate="false"
                android:progressTint="@color/purple_700"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>