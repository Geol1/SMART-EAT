<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_4dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="0.0"
        android:textSize="@dimen/dimen_8sp"
        android:id="@+id/colaborator_current_contribution_value"
        android:textColor="@color/black_title"
        app:layout_constraintTop_toBottomOf="@+id/name_contributor"/>

    <TextView
        android:id="@+id/name_contributor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_ltstd_book"
        android:text="@string/name"
        android:textSize="@dimen/dim_8sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contributor_image" />
    <ProgressBar
        android:layout_width="@dimen/dim_60dp"
        android:layout_height="@dimen/dimen_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/contributorProgress"
        android:layout_marginTop="@dimen/dim_2dp"
        style="@style/CustomProgressBarHorizontalAllRadiused"
        app:layout_constraintTop_toBottomOf="@+id/colaborator_current_contribution_value"/>
    <ImageView
        android:id="@+id/contributor_image"
        android:layout_width="@dimen/dim_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:src="@drawable/ic_person_black_24dp"
        android:background="@drawable/circular_shape_transfer_empty_inside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>