<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.verifyyourphone.PhoneVerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TitlePhoneVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Phone verification"
            android:textColor="@color/Title_color"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_34sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
        <TextView
            android:id="@+id/Sub_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TitleAuthentification"
            android:text="Enter your OTP code here"
            android:textColor="@color/Text_Sub_Title"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
        <LinearLayout
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Sub_Title"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/dimens_35dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_shape_phone_verification"
                android:layout_marginHorizontal="@dimen/dimens8dp"
                android:textSize="@dimen/dimens_20dp"
                android:inputType="phone"
                android:maxLength="1"
                android:textColorHint="@color/Text_color_sub"
                />
            <EditText
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_shape_phone_verification"
                android:layout_marginHorizontal="@dimen/dimens8dp"
                android:textSize="@dimen/dimens_20dp"
                android:inputType="phone"
                android:maxLength="1"
                android:textColorHint="@color/Text_color_sub"
                />
            <EditText
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_shape_phone_verification"
                android:layout_marginHorizontal="@dimen/dimens8dp"
                android:textSize="@dimen/dimens_20dp"
                android:inputType="phone"
                android:maxLength="1"
                android:textColorHint="@color/Text_color_sub"
                />
            <EditText
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_shape_phone_verification"
                android:layout_marginHorizontal="@dimen/dimens8dp"
                android:textSize="@dimen/dimens_20dp"
                android:inputType="phone"
                android:maxLength="1"
                android:textColorHint="@color/Text_color_sub"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/didnt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/edit_text"
            android:text="Didn't you received any code?"
            android:textColor="@color/Text_Sub_Title"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
        <TextView
            android:id="@+id/recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/didnt_code"
            android:text="Recent a new code."
            android:textColor="#FF8C00"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>