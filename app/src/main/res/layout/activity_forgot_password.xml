<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recoverpassword.ForgotPasswordActivity"
    android:background="@drawable/rounded_shape_authentification">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:layout_marginTop="@dimen/dimens_40sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textSize="@dimen/dimens_40sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textColor="#0A1F44"
        android:id="@+id/recoverpassword_title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_enter_your_email_address_you_will_receive_a_link_to_create_a_new_password_via_email"
        android:layout_marginTop="@dimen/dimens_20sp"
        app:layout_constraintTop_toBottomOf="@id/recoverpassword_title"
        android:textAlignment="center"
        android:textSize="@dimen/dimens_18sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:id="@+id/recoverpassword_consign"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recoverpassword_consign"
        android:background="@drawable/rounded_shape_input_text"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="@dimen/dimens_15sp"
        android:padding="@dimen/dimens_10sp"
        android:hint="@string/your_emailrecovery"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/dimens_20sp"
        android:singleLine="true"
        android:lines="1"
        android:id="@+id/recoverpassword_email"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recoverpassword_email"

        android:layout_marginTop="50sp"
        android:text="@string/send"
        android:textSize="@dimen/dimens_20sp"
        android:background="@drawable/rounded_shape_butom"
        android:layout_marginHorizontal="@dimen/dimens_15sp"
        android:id="@+id/recoverpassword_SendButon"
        />
</androidx.constraintlayout.widget.ConstraintLayout>