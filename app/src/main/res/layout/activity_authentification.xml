<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentification.AuthentificationActivity"
    android:background="#E4E4E4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.40"
        android:background="#707070">
        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginStart="@dimen/dimens_10dp" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintHeight_default="percent"
        android:layout_marginEnd="@dimen/dimens_20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_shape_authentification">
        <TextView
            android:id="@+id/TitleAuthentification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/welcome_back"
            android:textColor="@color/Title_color"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_34sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
        <TextView
            android:id="@+id/Sub_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TitleAuthentification"
            android:text="@string/log_into_your_acompt"
            android:textColor="@color/Text_color_sub"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:background="@drawable/rounded_shape_into_text"
            android:hint="@string/email"
            android:paddingBottom="@dimen/dimens_5dp"
            android:paddingTop="@dimen/dimens_15dp"
            android:paddingHorizontal="@dimen/dimens_20dp"
            android:textColorHint="@color/Text_color_sub"
            android:textSize="@dimen/dimens_20sp"
            app:layout_constraintTop_toBottomOf="@id/Sub_Title" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:background="@drawable/rounded_shape_into_text"
            android:hint="@string/password"
            android:paddingHorizontal="@dimen/dimens_20dp"
            android:paddingTop="@dimen/dimens_15dp"
            android:paddingBottom="@dimen/dimens_5dp"
            android:textColorHint="@color/Text_color_sub"
            android:textSize="@dimen/dimens_20sp"
            app:layout_constraintTop_toBottomOf="@id/username" />
        <Button
           android:text="@string/login"
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_700"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            app:layout_constraintTop_toBottomOf="@id/password"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:background="@drawable/rounded_shape_into_log"
            />
        <TextView
            android:id="@+id/forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_btn"
            android:text="@string/forgot_your_password"
            android:textColor="@color/Text_color_sub"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens_20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/forgot"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/forgot"
            android:text="@string/dont_have_account"
            android:textColor="@color/Text_color_sub"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_16sp" />
            <TextView
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/sign_up"
                android:textColor="@color/orange_clear"
                android:textAlignment="center"
                android:textSize="@dimen/dimens_16sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>