<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentification.AuthentificationActivity"
    android:background="#E4E4E4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.40"
        android:background="#707070">

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintHeight_default="percent"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_shape_authentification">
        <TextView
            android:id="@+id/TitleAuthentification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/welcome_back"
            android:textColor="@color/Title_color"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_34sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
        <TextView
            android:id="@+id/Sub_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TitleAuthentification"
            android:text="@string/log_into_your_acompt"
            android:textColor="@color/Text_Sub_Title"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Sub_Title"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_shape_into_text"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:textSize="@dimen/dimens_25sp"
            android:padding="@dimen/dimens5dp"
            android:hint="e-mail"
            android:textColorHint="@color/Text_color_sub"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/username"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_shape_into_text"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:textSize="@dimen/dimens_25sp"
            android:padding="@dimen/dimens5dp"
            android:hint="password"
            android:textColorHint="@color/Text_color_sub"/>
        <Button
           android:text="Login"
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_700"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            app:layout_constraintTop_toBottomOf="@id/password"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_shape_into_log"
            />
        <TextView
            android:id="@+id/forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_btn"
            android:text="Forgot your password?"
            android:textColor="@color/Text_Sub_Title"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/forgot"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/forgot"
            android:text="dont have account? "
            android:textColor="@color/Text_Sub_Title"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_16sp"
            android:layout_marginTop="@dimen/dimens8dp"
            />
            <TextView
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text=" sign up"
                android:textColor="#FF8C00"
                android:textAlignment="center"
                android:textSize="@dimen/dimens_16sp"
                android:layout_marginTop="@dimen/dimens8dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>