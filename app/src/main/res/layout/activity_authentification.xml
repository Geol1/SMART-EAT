<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E4E4E4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentification.AuthentificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#707070"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_shape_authentification"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.70"
        tools:layout_editor_absoluteX="30dp">

        <TextView
            android:id="@+id/titleAuthentificatiion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_15dp"
            android:text="Welcome back"
            android:gravity="center"
            android:fontFamily="@font/avenirltstd_black"
            android:textColor="@color/Title_color"
            android:textSize="@dimen/dimens_34sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subTitleAuthentificatiion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_8dp"
            android:text="@string/log_in_to_your_account"
            android:gravity="center"
            android:fontFamily="@font/avenirltstd_book"
            android:textSize="@dimen/dimens_17sp"
            android:layout_marginBottom="@dimen/dimens_70dp"
            app:layout_constraintTop_toBottomOf="@+id/titleAuthentificatiion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimens_20dp"
                app:layout_constraintTop_toBottomOf="@id/subTitleAuthentificatiion"
                >
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:background="@drawable/rounded_shape_input_text"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/dimens_12dp"
            android:fontFamily="@font/avenirltstd_book"
            android:textSize="@dimen/dimens_17sp"
            android:singleLine="true"
            android:lines="1"
            />

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@drawable/rounded_shape_input_text"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="@dimen/dimens_12dp"
            android:fontFamily="@font/avenirltstd_book"
            android:textSize="@dimen/dimens_17sp"
            android:singleLine="true"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@id/userName" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_30dp"
            app:layout_constraintTop_toBottomOf="@id/userPassword"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:background="@drawable/rounded_shape_butom"
            android:hint="@string/login"
            android:fontFamily="@font/avenir_heavy_opentype_bigfontsite"
            android:textSize="@dimen/dimens_17sp"
            android:textColorHint="@color/white"
            android:id="@+id/buttonlogin"
            />
        <TextView
            android:id="@+id/fogotText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/forgot_your_password"
            android:fontFamily="@font/avenirltstd_book"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/dimens_17sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/buttonlogin" />
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/fogotText"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginBottom="@dimen/dimens_80dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/endText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_an_account"
                android:textAlignment="textStart"
                android:fontFamily="@font/avenirltstd_book"
                android:textSize="@dimen/dimens_17sp"
                app:layout_constraintTop_toBottomOf="@id/endText" />
            <TextView
                android:id="@+id/sing_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/authentification_sign_up"
                android:fontFamily="@font/avenirltstd_book"
                android:textAlignment="textStart"
                android:textColor="@color/purple_700"
                android:layout_marginHorizontal="4dp"
                android:textSize="@dimen/dimens_17sp"
                app:layout_constraintTop_toBottomOf="@id/endText" />
        </LinearLayout>
            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>